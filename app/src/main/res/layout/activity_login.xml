<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent" android:background="@drawable/login_bg">


    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/minilock"
        android:layout_marginTop="22dp"
        />

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="15sp"
            android:id="@+id/editAccount"
            android:gravity="center_vertical"
            android:paddingBottom="20dp"
            android:hint="请输入账号"
            android:inputType=""
            android:paddingLeft="50dp"
            />
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/login_account"
            android:layout_alignLeft="@+id/editAccount"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/drow_down_btn"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/editAccount"
            android:src="@drawable/draw_down_btn"
            />
        <ImageView
            android:id="@+id/drow_up_btn"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/editAccount"
            android:src="@drawable/draw_up_btn"
            android:visibility="gone"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="10dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="15sp"
            android:id="@+id/editPassword"
            android:gravity="center_vertical"
            android:paddingBottom="20dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="50dp"
            />
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/login_password"
            android:layout_alignLeft="@+id/editPassword"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_marginLeft="2dp"
            android:layout_below="@+id/editPassword"
            android:layout_alignLeft="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#c24028"
            android:textSize="14sp"
            android:id="@+id/forgetView"
            android:text="忘记密码"/>

        <TextView
            android:layout_marginRight="2dp"
            android:layout_below="@+id/editPassword"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c24028"
            android:textSize="14sp"
            android:id="@+id/registView"
            android:text="注册"/>


    </RelativeLayout>


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_shape"
        android:text="登录"
        android:paddingTop="7dp"
        android:textColor="#ffffff"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/loginLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录即代表阅读并同意服务条款"
        android:paddingTop="65dp"
        android:textSize="9.5dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>



