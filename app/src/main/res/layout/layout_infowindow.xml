<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="#0000"
    >
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="@color/infoWindowBG">
        <TextView
            android:id="@+id/agent_name"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="16sp"
            android:text="1"
            android:textColor="@color/infoWindowTitle"/>
        <TextView
            android:id="@+id/agent_addr"
            android:text="1"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/infoWindowText"/>
        <TextView
            android:id="@+id/distance"
            android:layout_marginStart="14dp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.1km"
            android:textSize="14sp"
            android:textColor="#1DA1F2"/>
        <View
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#DFDFDF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:clickable="true"
                android:id="@+id/navigation_walk"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/walk" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_walk"
                    android:textSize="14sp"
                    android:textColor="@color/infoWindowText"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginBottom="13dp"
                android:background="#DFDFDF"/>
            <LinearLayout
                android:clickable="true"
                android:id="@+id/navigation_bike"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/bike"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nav_bike"
                    android:textSize="14sp"
                    android:textColor="@color/infoWindowText"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_marginBottom="13dp"
                android:background="#DFDFDF"/>
            <LinearLayout
                android:clickable="true"
                android:id="@+id/navigation_car"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/car"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nav_car"
                    android:textSize="14sp"
                    android:textColor="@color/infoWindowText"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

